<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    tools:context=".ComplexPuzzle.ComplexPuzzlesActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="-969dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/bevan"
                    android:gravity="center"
                    android:text="PUZZLE TIME !"
                    android:background="@color/teal_200"
                    android:padding="15dp"
                    android:textColor="@android:color/black"
                    android:textSize="36dp"
                    android:textStyle="bold"
                    android:transitionName="logo_text"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/hintLayout"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageHint"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ty" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/emilys_candy"
                    android:gravity="center"
                    android:text="Click me"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>



            <ImageView
                android:layout_width="189dp"
                android:layout_height="150dp"
                android:id="@+id/btnAD"
                android:src="@drawable/adventuretime"
                android:layout_marginTop="15dp"/>

            <ImageView
                android:layout_width="189dp"
                android:layout_height="150dp"
                android:id="@+id/btnChipmunks"
                android:src="@drawable/chipmunks"
                android:layout_marginTop="30dp"
                android:layout_below="@id/btnMickey"/>




            <ImageView
                android:layout_width="189dp"
                android:layout_height="150dp"
                android:id="@+id/btnSimpsons"
                android:src="@drawable/simpsons"
                android:layout_marginTop="30dp"
                android:layout_below="@id/btnPawPatrol"/>

            <ImageView
                android:layout_width="189dp"
                android:layout_height="150dp"
                android:id="@+id/btnTJ"
                android:src="@drawable/tomandjerry"
                android:layout_marginTop="30dp"
                android:layout_below="@id/btnFrozen"
                android:layout_marginBottom="90dp"/>



        </LinearLayout>
    </ScrollView>



</RelativeLayout>