<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/teal_700"
    android:layout_height="match_parent"
    tools:context=".MenuMathNSActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="-969dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageHint"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:src="@drawable/ty" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/emilys_candy"
                android:gravity="center"
                android:id="@+id/check"
                android:text="Click me"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/emilys_candy"
                android:gravity="center"
                android:text="Mathematics"
                android:textColor="@android:color/black"
                android:textSize="40dp"
                android:textStyle="bold"
                android:transitionName="logo_text"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:id="@+id/lo_level2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lo_level1"
                android:gravity="center"
                android:layout_marginTop="45dp">

                <Button
                    android:id="@+id/btnMath"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Mathematics"
                    android:background="@color/buttonsMaths"
                    android:textAllCaps="false" />

            </LinearLayout>


            <Button
                android:id="@+id/btnMenu"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lo_level4"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:text="Main Menu"
                android:background="@color/buttonsMaths"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:layout_marginBottom="30dp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>