<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink1"
    tools:context=".CreatingSentenceGame">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="-969dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/hintLayout"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageHint"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ty" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/emilys_candy"
                    android:gravity="center"
                    android:id="@+id/check"
                    android:text="Click me"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="45dp"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:background="@color/lightpink1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginTop="15dp"
                                android:src="@drawable/mominkitchen"
                                />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="5dp"
                                    android:textStyle="bold"
                                    android:text="mother the is in My kitchen"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:textSize="17dp"
                                    />

                                <EditText
                                    android:layout_width="250dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="17dp"
                                    android:hint="Answer"
                                    android:id="@+id/ansMomKitchen"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@color/black"
                                    android:inputType="textCapSentences"
                                    android:background="@color/white">


                                </EditText>


                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@color/lightpink1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginTop="15dp"
                                android:src="@drawable/mango"
                                />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="5dp"
                                    android:textStyle="bold"
                                    android:text="These are juicy mangoes"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:textSize="17dp"
                                    />

                                <EditText
                                    android:layout_width="250dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="17dp"
                                    android:hint="Answer"
                                    android:id="@+id/ansMango"
                                    android:inputType="textCapSentences"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@color/black"
                                    android:background="@color/white">


                                </EditText>


                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@color/lightpink1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginTop="15dp"
                                android:src="@drawable/toys"
                                />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="5dp"
                                    android:text="toys Please away your put"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:textSize="17dp"
                                    />

                                <EditText
                                    android:layout_width="250dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="17dp"
                                    android:hint="Answer"
                                    android:id="@+id/ansToys"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@color/black"
                                    android:inputType="textCapSentences"
                                    android:background="@color/white">


                                </EditText>


                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@color/lightpink1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginTop="15dp"
                                android:src="@drawable/earth"
                                />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="5dp"
                                    android:text="planet is a Earth"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:textSize="17dp"
                                    />

                                <EditText
                                    android:layout_width="250dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="17dp"
                                    android:hint="Answer"
                                    android:id="@+id/andEarth"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@color/black"
                                    android:inputType="textCapSentences"
                                    android:background="@color/white">


                                </EditText>


                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@color/lightpink1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginTop="15dp"
                                android:src="@drawable/cat"
                                />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="5dp"
                                    android:text="cat black is The"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:textSize="17dp"
                                    />

                                <EditText
                                    android:layout_width="250dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="17dp"
                                    android:hint="Answer"
                                    android:id="@+id/ansCat"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@color/black"
                                    android:inputType="textCapSentences"
                                    android:background="@color/white">


                                </EditText>


                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/lightpink1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginTop="15dp"
                                android:src="@drawable/dadcook"
                                />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="5dp"
                                    android:text="every delicious Father cooks evening pasta"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:textSize="17dp"
                                    />

                                <EditText
                                    android:layout_width="250dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="17dp"
                                    android:hint="Answer"
                                    android:id="@+id/dadPasta"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@color/black"
                                    android:inputType="textCapSentences"
                                    android:background="@color/white">


                                </EditText>


                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@color/lightpink1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginTop="15dp"
                                android:src="@drawable/guitar"
                                />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="5dp"
                                    android:text="John well very plays the guitar"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:textSize="17dp"
                                    />

                                <EditText
                                    android:layout_width="250dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="17dp"
                                    android:hint="Answer"
                                    android:id="@+id/ansGuitar"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@color/black"
                                    android:inputType="textCapSentences"
                                    android:background="@color/white">


                                </EditText>


                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@color/lightpink1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginTop="15dp"
                                android:src="@drawable/lovefam"
                                />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="5dp"
                                    android:text="my love I family"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:textSize="17dp"
                                    />

                                <EditText
                                    android:layout_width="250dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="17dp"
                                    android:hint="Answer"
                                    android:id="@+id/ansFam"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@color/black"
                                    android:inputType="textCapSentences"
                                    android:background="@color/white">


                                </EditText>


                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@color/lightpink1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginTop="15dp"
                                android:src="@drawable/daddrive"
                                />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="5dp"
                                    android:textStyle="bold"
                                    android:text="everyday Dad drives school to us"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:textSize="17dp"
                                    />

                                <EditText
                                    android:layout_width="250dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="17dp"
                                    android:hint="Answer"
                                    android:id="@+id/ansDadDrive"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@color/black"
                                    android:inputType="textCapSentences"
                                    android:background="@color/white">


                                </EditText>


                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/worksheet"
                    >

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CHECK ANSWERS"
                        android:id="@+id/btnDone"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/black"
                        android:background="@color/lightpink"
                        android:layout_marginLeft="80dp"
                        android:layout_marginBottom="30dp"
                        />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BACK"
                        android:layout_marginTop="20dp"
                        android:id="@+id/btnBack"
                        android:background="@color/lightpink"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>